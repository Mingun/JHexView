<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>ru.mingun</groupId>
  <artifactId>JHexView</artifactId>
  <!-- Version will be filled from published tag during creating release in GitHub Action -->
  <version>${PROJECT_VERSION}</version>
  <packaging>jar</packaging>

  <licenses>
    <license>
      <name>GPL-2.0</name>
      <url>https://opensource.org/licenses/GPL-2.0</url>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git@github.com/Mingun/JHexView.git</connection>
    <developerConnection>scm:git:git@github.com:Mingun/JHexView.git</developerConnection>
    <url>https://github.com/Mingun/JHexView/tree/master</url>
  </scm>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>3.0.0-M1</version>
      </plugin>
    </plugins>
  </build>

  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub Action with GITHUB_TOKEN</name>
      <url>https://maven.pkg.github.com/Mingun/${project.artifactId}</url>
    </repository>
  </distributionManagement>
</project>